{
  "baseConfig": "trifid:config-sparql.json",
  "sparqlEndpointUrl": "env:SPARQL_ENDPOINT_URL",
  "sparqlEndpointAuthentication": {
    "user": "env:SPARQL_USERNAME",
    "password": "env:SPARQL_PASSWORD"
  },
  "sparqlProxy": {
    "default": {
      "options": {
        "queryOperation": "postQueryUrlencoded"
      }
    }
  },
  "staticViews": {
    "/": "cwd:views/home.html",
    "/datasets/": "cwd:views/datasets.html",
    "/datasets-int/": "cwd:views/datasets-int.html",
    "/sparql/": "cwd:views/yasgui.html",
    "/publish/": "cwd:views/publish.html",
    "/contact/": "cwd:views/contact.html"
  },
  "staticFiles": {
    "dataadminFiles": {
      "path": "/",
      "folder": "cwd:public"
    },
    "styleFiles": {
      "path": "/",
      "folder": "cwd:node_modules/swiss-styleguide/build"
    },
    "zackFiles": {
      "path": "/zack-search/",
      "folder":  "cwd:node_modules/zack-search/dist"
    }
  },
  "handler": {
    "root": {
      "options": {
        "resourceExistsQuery": "ASK { GRAPH ?g { <${iri}> ?p ?o }}",
        "resourceGraphQuery": "CONSTRUCT { <${iri}> ?p ?o } WHERE { <${iri}> ?p ?o }",
        "containerExistsQuery": "ASK { GRAPH ?g { <${iri}> ?p ?o }}",
        "containerGraphQuery": "CONSTRUCT { <${iri}> ?p ?o } WHERE { <${iri}> ?p ?o }"
      }
    }
  },
  "i18n": {
    "updateFiles": false,
    "locales": ["de", "fr", "it", "en"]
  },
  "renderer": {
    "root": {
      "template": "cwd:views/index.html",
      "templateError": "cwd:views/error.html"
    }
  },
  "yasgui": {
    "default": {
      "template": "cwd:views/yasgui.html",
      "urlShortener": "https://s.zazuko.com/api/v1/shorten"
    }
  },
  "content": {
    "navigation": [
      {
        "title": "About LINDAS",
        "link": "/"
      },
      {
        "title": "Datasets",
        "link": "/datasets/"
      },
      {
        "title": "Query Data",
        "link": "/sparql/"
      },
      {
        "title": "Publish Data",
        "link": "/publish/"
      }
    ]
  },
  "plugins": {
    "i18n": {
      "priority": 5,
      "module": "trifid-plugin-i18n"
    },
    "readFile": {
      "priority": 110,
      "module": "./readFile.js"
    }
  }
}
